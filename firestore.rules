
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================================================
    // Helper Functions
    // =================================================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() 
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // =================================================================
    // User Collection
    // =================================================================
    match /users/{userId} {
      // Admins can read any profile, users can read their own.
      allow read: if isOwner(userId) || isAdmin();
      
      // Admins can create users (e.g., for seeding), users can create their own profile.
      allow create: if isOwner(userId) || isAdmin();
      
      // Admins can update any profile, users can update their own.
      allow update: if isOwner(userId) || isAdmin();
      
      // Only admins can delete user profiles.
      allow delete: if isAdmin();
    }

    // =================================================================
    // Freight Collection
    // =================================================================
    match /freights/{freightId} {
      // Anyone can see available freights.
      allow read: if true;
      
      // Anyone can request a freight (even unauthenticated).
      // This is a business decision to lower the barrier to entry.
      allow create: if true;
      
      // Only the company that posted it or an admin can update/delete it.
      allow update, delete: if isAdmin() || (isAuthenticated() && resource.data.companyId == request.auth.uid);
    }
    
    // =================================================================
    // Platform Configuration Collections (Admin-managed)
    // =================================================================

    // Plans should be readable by authenticated users so they can choose one.
    // Only admins can modify plans.
    match /plans/{planId} {
      allow read: if isAuthenticated() || isAdmin();
      allow write: if isAdmin();
    }

    // Vehicle categories are public info for filtering etc.
    // Only admins can change them.
    match /vehicle_categories/{categoryId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Vehicle types are public info for filtering etc.
    // Only admins can change them.
    match /vehicle_types/{typeId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Body types are public info for filtering etc.
    // Only admins can change them.
    match /body_types/{bodyId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Vehicles are currently only managed by admins.
    // This can be expanded later if users should manage their own vehicles.
    match /vehicles/{vehicleId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
