
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /freights/{freightId} {
        allow read: if true;
        allow create: if true; // Allows anonymous and authenticated users
        allow update, delete: if isAdmin() || resource.data.companyId == request.auth.uid;
    }

    match /body_types/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /vehicle_categories/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /vehicle_types/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
    match /vehicles/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    match /plans/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
