rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que um usuário crie, leia e atualize seu próprio documento,
    // mas não altere sua própria função (role).
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId && request.resource.data.role == resource.data.role;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Ninguém pode deletar
    }
  }
}
