rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Regras para a coleção 'users'
    match /users/{userId} {
      // Qualquer usuário autenticado pode criar seu próprio perfil
      allow create: if request.auth.uid == userId;
      // Um usuário só pode ler ou atualizar seus próprios dados
      allow read, update: if request.auth.uid == userId || isAdmin();
      // Apenas administradores podem deletar usuários ou listar todos
      allow delete, list: if isAdmin();
    }
    
    // Regras para a coleção 'freights'
    match /freights/{freightId} {
        // Qualquer um pode criar (solicitação anônima) ou ler a lista de fretes
        allow create, read;
        // Apenas o criador (se logado) ou um admin pode atualizar/deletar
        allow update, delete: if isAdmin() || request.auth.uid == resource.data.companyId;
    }

    // Regras para coleções de configuração (Planos, Tipos de Veículos, etc.)
    match /plans/{planId} {
      allow read: if true;
      allow list, write: if isAdmin();
    }

    match /vehicle_types/{typeId} {
      allow read: if true;
      allow list, write: if isAdmin();
    }
    
    match /vehicle_categories/{categoryId} {
      allow read: if true;
      allow list, write: if isAdmin();
    }
    
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow list, write: if isAdmin();
    }

    match /body_types/{bodyTypeId} {
      allow read: if true;
      allow list, write: if isAdmin();
    }
  }
}
