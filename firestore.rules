
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow authenticated users to read any user profile (for role checking)
      allow read: if request.auth != null;
      
      // Allow users to create their own profile with specific fields
      allow create: if request.auth.uid == userId 
                    && request.resource.data.keys().hasAll(['uid', 'name', 'email', 'role', 'createdAt'])
                    && request.resource.data.uid == request.auth.uid
                    && request.resource.data.email == request.auth.token.email
                    && request.resource.data.role in ['driver', 'company'];

      // Allow users to update only their own profile
      allow update: if request.auth.uid == userId;
    }
  }
}
